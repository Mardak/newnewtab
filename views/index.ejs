<div id="scrollbox">
  <div id="vertical-margin">
    <div id="margin-top"></div>

    <div id="horizontal-margin">
      <div class="margin-side"></div>

      <div id="grid">
        <% for (var i = 0; i < 3; i++) { %>
          <div class="row">
            <% for (var j = 0; j < 3; j++) { %>
              <div class="cell">
                <div class="site" draggable="true">
                  <a class="link" title="APP TITLE" href="http://www.example.com/">
                    <span class="thumbnail" style="background-image: url('moz-page-thumb://thumbnail?url=http%3A%2F%2Fwww.reddit.com%2F');"></span>
                    <span class="title">TextMate 2</span>
                  </a>
                  <input type="button" title="Pin this app at its current position" class="control control-pin">
                  <input type="button" title="Remove this app" class="control control-block">
                </div>
              </div>
            <% } %>
          </div>
        <% } %>
      </div>

      <div class="margin-side"></div>
    </div>

    <div id="margin-bottom"></div>
  </div>

  <input id="toggle" type="button">
</div>
